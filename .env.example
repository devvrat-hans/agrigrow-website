# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/agrigrow

# App URL (for metadata and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Gemini API key
GEMINI_API_KEY=your_gemini_api_key

# Model Configuration (optional - defaults will be used if not set)
GEMINI_MODEL=gemini-2.5-flash

# Temperature controls randomness in responses (0.0 - 1.0)
# Lower = more focused/deterministic, Higher = more creative/random
# Default: 0.3 for diagnosis/planning (more consistent), 0.7 for chat (more natural)
GEMINI_TEMPERATURE_DIAGNOSIS=0.3
GEMINI_TEMPERATURE_PLANNING=0.3
GEMINI_TEMPERATURE_CHAT=0.7

# Maximum output tokens (controls response length)
# Default: 4096 for diagnosis/planning, 1024 for chat
GEMINI_MAX_TOKENS_DIAGNOSIS=4096
GEMINI_MAX_TOKENS_PLANNING=4096
GEMINI_MAX_TOKENS_CHAT=1024

# Maximum AI requests per hour per user (default: 50)
AI_RATE_LIMIT_REQUESTS_PER_HOUR=50

# Maximum AI requests per day per user (default: 200)
AI_RATE_LIMIT_REQUESTS_PER_DAY=200

# Rate limit window in milliseconds (default: 3600000 = 1 hour)
AI_RATE_LIMIT_WINDOW_MS=3600000

# Enable rate limiting (set to 'false' to disable for development)
AI_RATE_LIMIT_ENABLED=true

# Weather API key (get from https://www.weatherapi.com/)
WEATHER_API_KEY=your_weatherapi_com_key

# Weather cache TTL in milliseconds (default: 900000 = 15 minutes)
WEATHER_CACHE_TTL_MS=900000

# Default forecast days (1-10, default: 3)
WEATHER_DEFAULT_FORECAST_DAYS=3
